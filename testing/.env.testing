# 🧪 TESTING ENVIRONMENT CONFIGURATION
# =====================================
# Archivo de configuración para el entorno de testing
# Copia este archivo como .env.testing y configura tus valores

# 🌐 API Configuration
API_BASE_URL=http://localhost:8000
WS_BASE_URL=ws://localhost:8000
HEALTH_ENDPOINT=/health

# 👤 Test User Credentials
TEST_USER_EMAIL=test@0bullshit.com
TEST_USER_PASSWORD=TestPassword123!
TEST_USER_NAME=Cursor Test User

# 🆔 Test Project Configuration
TEST_PROJECT_ID=
# Este se generará automáticamente durante los tests

# 🔑 API Keys para Testing (opcional)
STRIPE_TEST_KEY=sk_test_your_stripe_test_key_here
UNIPILE_TEST_KEY=your_unipile_test_key_here

# ⚙️ Testing Configuration
TESTING_MODE=true
TEST_TIMEOUT=30
MAX_RETRIES=3
DEBUG_TESTING=false

# 🎯 Feature Flags for Testing
TEST_PAYMENTS=true
TEST_LINKEDIN=false
TEST_WEBSOCKETS=true
TEST_SEARCH=true
TEST_CHAT=true

# 📊 Test Limits (para evitar gastar muchos créditos)
MAX_SEARCH_RESULTS=5
MAX_INVESTOR_SEARCH_RESULTS=3
TEST_CREDITS_LIMIT=100

# 🚀 Performance Testing
LOAD_TEST_USERS=10
LOAD_TEST_DURATION=60
CONCURRENT_REQUESTS=5

# 📝 Logging
LOG_LEVEL=INFO
SAVE_TEST_LOGS=true
TEST_LOG_FILE=testing_results.log